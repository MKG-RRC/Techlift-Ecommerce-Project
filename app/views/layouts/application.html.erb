<!DOCTYPE html>
<html>
  <head>
    <title>TechliftStore</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <meta name="viewport" content="width=device-width,initial-scale=1">

    <!-- Bootstrap 4 CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    >

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <!-- =======================
         GLOBAL NAVBAR
    ======================== -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3 sticky-top">
  <div class="container">

    <!-- Brand -->
    <%= link_to root_path, class: "navbar-brand font-weight-bold d-flex align-items-center" do %>
      <i class="fa-solid fa-store mr-2"></i>
      <span style="font-size: 1.4rem;">TechLift Store</span>
    <% end %>

    <!-- Mobile Toggle -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar -->
    <div class="collapse navbar-collapse" id="mainNavbar">
      <ul class="navbar-nav ml-auto align-items-center">

        <li class="nav-item mx-2">
          <%= link_to root_path, class: "nav-link d-flex align-items-center" do %>
            <i class="fa-solid fa-house mr-1"></i> Home
          <% end %>
        </li>

        <li class="nav-item mx-2">
          <%= link_to products_path, class: "nav-link d-flex align-items-center" do %>
            <i class="fa-solid fa-box mr-1"></i> Products
          <% end %>
        </li>

        <li class="nav-item mx-2">
          <%= link_to about_path, class: "nav-link d-flex align-items-center" do %>
            <i class="fa-solid fa-circle-info mr-1"></i> About
          <% end %>
        </li>

        <li class="nav-item mx-2">
          <%= link_to contact_path, class: "nav-link d-flex align-items-center" do %>
            <i class="fa-solid fa-envelope mr-1"></i> Contact
          <% end %>
        </li>

        <!-- Auth -->
        <% if user_signed_in? %>
          <li class="nav-item mx-2 dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="accountDropdown"
               role="button" data-toggle="dropdown">
              <i class="fa-solid fa-user mr-1"></i> <%= current_user.email.split('@').first %>
            </a>

            <div class="dropdown-menu dropdown-menu-right">
              <%= link_to "My Account", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Orders", orders_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to "Logout", destroy_user_session_path,
                           data: { turbo_method: :delete },
                           class: "dropdown-item text-danger" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item mx-2">
            <%= link_to new_user_session_path, class: "nav-link d-flex align-items-center" do %>
              <i class="fa-solid fa-right-to-bracket mr-1"></i> Login
            <% end %>
          </li>

          <li class="nav-item mx-2">
            <%= link_to new_user_registration_path, class: "btn btn-outline-primary btn-sm" do %>
              <i class="fa-solid fa-user-plus mr-1"></i> Sign Up
            <% end %>
          </li>
        <% end %>

        <!-- Cart -->
        <% cart_count = session[:cart].present? ? session[:cart].values.sum : 0 %>
        <li class="nav-item ml-3">
          <%= link_to cart_path, class: "btn btn-primary position-relative px-4 d-flex align-items-center" do %>
            <i class="fa-solid fa-cart-shopping mr-1"></i> Cart
            <span class="badge badge-light position-absolute"
                  style="top:-6px; right:-6px;">
              <%= cart_count %>
            </span>
          <% end %>
        </li>

      </ul>
    </div>
  </div>
</nav>



    <!-- Yield page content -->
    <%= yield %>

    <!-- =======================
         BOOTSTRAP 4 JS (REQUIRED)
    ======================== -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous">
    </script>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6Jty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4f86dIHNDz0W1LT"
      crossorigin="anonymous">
    </script>

    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous">
    </script>

  </body>
</html>
