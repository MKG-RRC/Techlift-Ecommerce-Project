<div class="container py-4">

  <% if @product.images.attached? %>
    <%= image_tag @product.images.first, class: "img-fluid mb-4", style: "max-height:400px; object-fit:cover;" %>
  <% end %>

  <h1><%= @product.name %></h1>
  <p class="text-muted"><%= @product.categories.map(&:name).join(", ") %></p>

  <h3>$<%= number_with_precision(@product.price, precision: 2) %></h3>

  <hr>

  <h4>Description</h4>
  <p><%= @product.description %></p>

  <h4>About</h4>
  <p><%= @product.about %></p>

  <h4>Specifications</h4>
  <p><%= @product.specifications %></p>

  <hr>

  <%= button_to "Add to Cart", add_cart_path(@product), method: :post, class: "btn btn-primary" %>

  <%= link_to "Back to Products", products_path, class: "btn btn-secondary mt-3" %>
</div>
