<div style="display: flex; gap: 40px; padding: 30px;">

  <!-- LEFT: IMAGE GALLERY -->
  <div style="width: 45%;">

    <!-- MAIN IMAGE -->
    <% if @product.images.attached? %>
      <%= image_tag @product.images.first,
        style: "width:100%; height:360px; object-fit:cover; border-radius:10px; border:1px solid #ddd;"
      %>
    <% else %>
      <div style="
        width:100%; height:360px; background:#f2f2f2; border-radius:10px;
        display:flex; align-items:center; justify-content:center; color:#777; border:1px solid #ddd;
      ">
        No Image Available
      </div>
    <% end %>

    <!-- THUMBNAILS -->
    <% if @product.images.count > 1 %>
      <div style="display:flex; gap:10px; margin-top:15px;">
        <% @product.images.each do |img| %>
          <%= image_tag img,
            style:"width:70px; height:70px; object-fit:cover; border-radius:6px; border:1px solid #ccc;"
          %>
        <% end %>
      </div>
    <% end %>

  </div>



  <!-- RIGHT: PRODUCT INFO -->
  <div style="width: 55%;">

    <!-- NAME -->
    <h1 style="margin: 0 0 10px 0;"><%= @product.name %></h1>

    <!-- BADGES -->
    <div style="margin-bottom: 10px;">
      <% if @product.is_new %>
        <span style="
          background:#3EB489; color:white; padding:4px 10px;
          border-radius:4px; font-size:12px; font-weight:600; margin-right:6px;
        ">NEW</span>
      <% end %>

      <% if @product.is_on_sale %>
        <span style="
          background:#d9534f; color:white; padding:4px 10px;
          border-radius:4px; font-size:12px; font-weight:600;
        ">SALE</span>
      <% end %>
    </div>

    <!-- PRICE -->
    <p style="font-size: 22px; font-weight: 700; color:#222;">
      $<%= number_with_precision(@product.price, precision: 2) %>
    </p>

    <!-- CATEGORIES -->
    <p style="font-size: 13px; color:#777; margin-bottom:20px;">
      Categories: <strong><%= @product.categories.map(&:name).join(", ") %></strong>
    </p>

    <hr>

    <!-- ABOUT -->
    <h3 style="margin-top: 20px;">About This Product</h3>
    <p style="line-height: 1.6; color:#444;">
      <%= simple_format(@product.about) %>
    </p>

    <hr>

    <!-- SPECIFICATIONS -->
    <h3 style="margin-top: 20px;">Specifications</h3>

    <div style="
      background:#fafafa; padding:15px; border:1px solid #ddd;
      border-radius:8px; font-size:14px;
    ">
      <%= simple_format(@product.specifications) %>
    </div>

    <hr>

    <!-- BACK -->
    <%= link_to "Back to Products", products_path,
      style: "
        display:inline-block; margin-top:20px;
        background:#007bff; padding:10px 16px;
        color:white; font-weight:600; border-radius:6px;
        text-decoration:none;
      "
    %>

  </div>

</div>
