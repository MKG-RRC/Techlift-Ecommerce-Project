<div class="container py-5">
  <div class="row">
    <div class="col-lg-7 mb-4">
      <h1 class="mb-3 font-weight-bold"><%= @page.title %></h1>
      <p class="text-muted mb-4">We typically respond within one business day.</p>

      <div class="card shadow-sm border-0">
        <div class="card-body">
          <%= simple_format(@page.content) %>

          <hr>
          <h5 class="font-weight-bold mb-3">Reach out</h5>
          <p class="mb-1"><i class="fa-solid fa-envelope mr-2 text-primary"></i> support@techlift.store</p>
          <p class="mb-1"><i class="fa-solid fa-phone mr-2 text-primary"></i> 1-800-555-0199</p>
          <p class="mb-0"><i class="fa-solid fa-clock mr-2 text-primary"></i> Mon–Fri, 9am–6pm ET</p>
        </div>
      </div>
    </div>

    <div class="col-lg-5">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <h5 class="font-weight-bold mb-3">Visit us</h5>
          <p class="mb-1">TechLift Store HQ</p>
          <p class="text-muted">123 Innovation Drive<br>Toronto, ON</p>
          <p class="mb-0">Pickup available by appointment.</p>
        </div>
      </div>
    </div>
  </div>
</div>
