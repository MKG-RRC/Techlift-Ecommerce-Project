<div class="container py-5">
  <!-- Hero -->
  <div class="row align-items-center mb-5">
    <div class="col-lg-6 mb-4 mb-lg-0">
      <span class="badge badge-primary mb-3">Welcome</span>
      <h1 class="font-weight-bold mb-3">Discover curated tech for builders, gamers, and creators.</h1>
      <p class="text-muted mb-4">Shop our selection of hardware with fast Canadian shipping. Taxes are calculated for your province at checkout.</p>
      <div class="d-flex flex-wrap">
        <%= link_to "Shop Products", products_path, class: "btn btn-primary mr-2 mb-2" %>
        <%= link_to "Browse Categories", products_path, class: "btn btn-outline-secondary mb-2" %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <h5 class="font-weight-bold mb-3">Why TechLift?</h5>
          <ul class="list-unstyled mb-0">
            <li class="mb-2"><i class="fa-solid fa-bolt text-warning mr-2"></i> Fast shipping from Canadian warehouses</li>
            <li class="mb-2"><i class="fa-solid fa-shield-halved text-primary mr-2"></i> Quality checked and curated catalog</li>
            <li class="mb-2"><i class="fa-solid fa-arrow-rotate-left text-success mr-2"></i> Easy returns within 30 days</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Products -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Featured Products</h3>
    <%= link_to "View all", products_path, class: "text-primary" %>
  </div>

  <div class="row">
    <% @featured_products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <% if product.images.attached? %>
            <%= image_tag product.images.first.variant(resize_to_limit: [600, 400]), class: "card-img-top", style: "height: 220px; object-fit: cover;" %>
          <% else %>
            <div class="bg-light d-flex justify-content-center align-items-center" style="height: 220px;">No Image</div>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-1"><%= product.name %></h5>
            <p class="text-muted small mb-2"><%= product.categories.map(&:name).join(", ") %></p>
            <p class="font-weight-bold mb-3">$<%= number_with_precision(product.price, precision: 2) %></p>
            <%= link_to "View product", product_path(product), class: "btn btn-outline-primary btn-sm mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Quick Categories -->
  <div class="mt-4">
    <h5 class="font-weight-bold mb-3">Shop by category</h5>
    <div class="d-flex flex-wrap">
      <% @categories.each do |category| %>
        <%= link_to category.name, products_path(category_id: category.id), class: "badge badge-light border mr-2 mb-2 p-2" %>
      <% end %>
    </div>
  </div>
</div>
